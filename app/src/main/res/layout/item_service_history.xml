<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Mechanic name + status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="space_between">

            <TextView
                android:id="@+id/tvMechanicName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mechanic: Alex Mwangi"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textStyle="bold"
                android:textColor="@color/teal_700"/>
        </LinearLayout>

        <!-- Car make -->
        <TextView
            android:id="@+id/tvCarMake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toyota Corolla 2015"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>

        <!-- Request type -->
        <TextView
            android:id="@+id/tvRequestType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service: Roadside"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>

        <!-- Issue -->
        <TextView
            android:id="@+id/tvIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved: OBD-II P0300 Misfire"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed on: Sep 3, 2025 14:30"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp"/>

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Kenyatta Ave, Nairobi"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

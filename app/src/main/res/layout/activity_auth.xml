<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Activity Title -->
        <TextView
            android:id="@+id/textAuthTitle"
            android:text="Login"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Email Input -->
        <EditText
            android:id="@+id/editEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/chat_input_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Password Input -->
        <EditText
            android:id="@+id/editPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/chat_input_bg"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Confirm Password (visible only in registration mode) -->
        <EditText
            android:id="@+id/editConfirmPassword"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/chat_input_bg"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Main Action Button (Login/Register) -->
        <Button
            android:id="@+id/btnSubmit"
            android:text="Login"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Switch Mode Text -->
        <TextView
            android:id="@+id/txtSwitchMode"
            android:text="Don't have an account? Sign Up"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Divider -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  OR  "
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/gray"/>
        </LinearLayout>

        <!-- Third-party Buttons -->
        <Button
            android:id="@+id/btnGoogle"
            android:text="Continue with Google"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnFacebook"
            android:text="Continue with Facebook"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnOTP"
            android:text="Continue with Phone OTP"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Dynamic input for third-party auth -->
        <EditText
            android:id="@+id/editThirdPartyInput"
            android:hint="Enter Info"
            android:inputType="text"
            android:visibility="gone"
            android:padding="12dp"
            android:background="@drawable/chat_input_bg"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>

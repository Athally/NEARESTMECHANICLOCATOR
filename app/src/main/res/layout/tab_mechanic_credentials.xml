<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/certificateImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_certificate"
            android:contentDescription="Certificate Image"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editSpecialization"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Area of Specialization"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveCredentials"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Save Credentials"
            android:backgroundTint="@color/amber"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>

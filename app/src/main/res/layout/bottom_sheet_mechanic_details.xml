<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet_dark"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/mechanicImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:background="@drawable/image_shadow"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/mechanicName"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="@string/Name"
        android:layout_width="280dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/statusBadge"
        android:text="Status"
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        android:textColor="#FFFFFF"
        android:layout_width="280dp"
        android:layout_height="48dp"/>

    <TextView
        android:id="@+id/specialization"
        android:textColor="#FFFFFF"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:text="@string/specialization"
        android:layout_width="280dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/rating"
        android:textColor="@color/white"
    android:textSize="18sp"
    android:text="@string/rating"
    android:layout_width="280dp"
    android:layout_height="48dp" />

    <TextView
        android:id="@+id/distance"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="@string/distance"
        android:layout_width="280dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/callButton"
            android:text="ðŸ“ž Call Mechanic"
            android:backgroundTint="#6A1B9A"
        android:textColor="#FFFFFF"
        android:layout_width="280dp"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/requestButton"
            android:text="@string/request_services"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/locationButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#6A1B9A"
        android:text="@string/view_location"
        android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/trackButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFFFFF"
        android:text="ðŸš— Track Mechanic"
        android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>

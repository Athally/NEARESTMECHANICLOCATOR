<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/black">

    ```
    <!-- Header Text -->
    <TextView
        android:id="@+id/tvDeleteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete  Account"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="12dp" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/tvDeleteMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This action is permanent and cannot be undone.\nYour data will be removed completely."
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="32dp" />

    <!-- Warning Icon -->
    <ImageView
        android:id="@+id/imgWarning"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_warning"
        android:backgroundTint="@color/yellow"
        android:layout_marginBottom="32dp" />

    <!-- Delete Button -->
    <Button
        android:id="@+id/btn_confirm_delete"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Yes, Delete My Account"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/orange"
        android:elevation="6dp"
        android:layout_marginBottom="16dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:elevation="4dp" />
    ```

</LinearLayout>

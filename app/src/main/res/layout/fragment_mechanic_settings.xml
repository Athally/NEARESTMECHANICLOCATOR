<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue_600"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Section (Optional) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:cardBackgroundColor="#FFCC80">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mechanic_settings"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preferences Section -->
        <TextView
            android:text="@string/preferences"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:cardBackgroundColor="#B39DDB">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Auto-accept Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_accept_requests"
                        android:textSize="16sp"
                        android:textColor="#4A148C"/>

                    <Switch
                        android:id="@+id/availabilitySwitch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:thumbTint="#FF4081"
                        android:trackTint="#F8BBD0"/>
                </LinearLayout>

                <!-- Live Location Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/share_live_location"
                        android:textSize="16sp"
                        android:textColor="#4A148C"/>

                    <Switch
                        android:id="@+id/liveLocationSwitch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:thumbTint="#1E88E5"
                        android:trackTint="#81D4FA"/>
                </LinearLayout>

                <!-- Dark Theme Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/dark_theme"
                        android:textSize="16sp"
                        android:textColor="#4A148C"/>

                    <Switch
                        android:id="@+id/themeSwitch"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:thumbTint="#FDD835"
                        android:trackTint="#FFF59D"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Availability Times Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/availability_hours"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/startTimeEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="@string/start_time"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="8dp"
                android:background="@drawable/edittext_bg_vibrant"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/endTimeEditText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="@string/end_time"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="8dp"
                android:background="@drawable/edittext_bg_vibrant"
                android:textColor="#4A148C"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveAvailabilityButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="@string/save_availability"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:backgroundTint="#FF7043"/>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:dividerPadding="12dp"
        android:showDividers="middle">

        <!-- Motel -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMotel"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/purple"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Motel"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

        <!-- Auto Spares -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSpares"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/teal"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Auto Spares"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

        <!-- Petrol Stations -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPetrol"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/blue"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Petrol Stations"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

        <!-- Book Mechanic -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMechanic"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/green"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Mechanic"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

        <!-- OBD2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOBD"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/red"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OBD2 Data"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

        <!-- Chat with Mechanic -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardChat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/orange"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with Mechanic"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

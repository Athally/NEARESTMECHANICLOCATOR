<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue_600"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:cardBackgroundColor="#FFCC80">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_user_avatar"
                    android:contentDescription="@string/image"
                    android:background="@drawable/image_shadow"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FF8A65"
                    android:text="@string/edit_your_profile"
                    android:textColor="#4E342E" />

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FF7043"
                    android:text="@string/change_passwordss"
                    android:textColor="#263238" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preferences Section -->
        <TextView
            android:text="@string/preferences"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:cardBackgroundColor="#B39DDB">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="space_between"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_dark_mode"
                        android:textSize="16sp"
                        android:textColor="#4A148C"/>

                    <Switch
                        android:id="@+id/switch_dark_mode"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:thumbTint="@color/electric_blue"
                        android:trackTint="@color/light_blue_300"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="space_between"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/share_your_location"
                        android:textSize="16sp"
                        android:textColor="#4A148C"/>

                    <Switch
                        android:id="@+id/switch_location_sharing"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:thumbTint="#1E88E5"
                        android:trackTint="#81D4FA"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="space_between"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/_share_obd"
                        android:textSize="16sp"
                        android:textColor="#4A148C"/>

                    <Switch
                        android:id="@+id/switch_obd_sharing"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:thumbTint="#FDD835"
                        android:trackTint="#FFF59D"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Service & Account Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/account_service"
            android:textColor="#004D40"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:cardBackgroundColor="#80CBC4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_service_history"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#26A69A"
                    android:text="@string/view_service_history"
                    android:textColor="#3E2723" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#00897B"
                    android:text="@string/_logout"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/delete_account"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#00695C"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

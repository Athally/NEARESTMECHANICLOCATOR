<resources>

    <style name="Base.Theme.NEARESTMECHANICLOCATOR.TopDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogSlideFromTop</item>

    </style>

    <style name="DialogSlideFromTop">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue_600</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/steel_gray</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Widget.Base.Theme.NEARESTMECHANICLOCATOR.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Base.Theme.NEARESTMECHANICLOCATOR.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_mechanic"
    app:startDestination="@id/nav_incoming">

    <!-- Incoming Requests Fragment -->
    <fragment
        android:id="@+id/nav_incoming"
        android:name="com.example.nearestmechaniclocator.IncomingRequestsFragment"
        android:label="Incoming Requests"
        tools:layout="@layout/fragment_incoming_requests" />

    <!-- Service History Fragment -->
    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.nearestmechaniclocator.HistoryFragment"
        android:label="Service History"
        tools:layout="@layout/fragment_history" />

    <!-- Notifications Fragment -->
    <fragment
        android:id="@+id/nav_notifications"
        android:name="com.example.nearestmechaniclocator.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.nearestmechaniclocator.MechanicSettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_mechanic_settings">

        <!-- Action to launch Change Password Activity -->
        <action
            android:id="@+id/action_settings_to_changePassword"
            app:destination="@id/global_changePasswordActivity" />

        <!-- Action to launch Maps Activity -->
        <action
            android:id="@+id/action_settings_to_map"
            app:destination="@id/global_mapsActivity" />
    </fragment>

    <!-- Global actions for external activities -->
    <activity
        android:id="@+id/global_changePasswordActivity"
        android:name="com.example.nearestmechaniclocator.ChangePasswordActivity"
        android:label="Change Password" />

    <activity
        android:id="@+id/global_mapsActivity"
        android:name="com.example.nearestmechaniclocator.MapsActivity"
        android:label="Map" />
</navigation>
